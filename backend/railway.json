{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "languages": {
        "python": "3.11"
      },
      "providers": ["python"],
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "pip", "postgresql"]
        },
        "install": {
          "cmds": ["python3 -m ensurepip", "python3 -m pip install --upgrade pip", "pip install -r requirements.txt"]
        },
        "start": {
          "cmds": ["gunicorn contact.wsgi:application"]
        }
      }
    }
  }
}
